@using static KyberKlass.Common.GeneralApplicationConstants

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<title>@ViewData["Title"] - KyberKlass</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
	<link rel="stylesheet" href="~/KyberKlass.Web.styles.css" asp-append-version="true"/>
</head>
<body>
@if (User.IsInRole("Admin"))
{
	<header>
		<!-- Admin Navigation Bar -->
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">KyberKlass (Admin)</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
				        aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">

						<!-- First Dropdown for managing schools -->
						<li class="nav-item">
							<div class="dropdown">
								<button class="btn btn-secondary dropdown-toggle" type="button" id="manageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
									Manage Schools
								</button>
								<ul class="dropdown-menu" aria-labelledby="manageDropdown">
									<li>
										<a class="dropdown-item" asp-area="" asp-controller="School" asp-action="All">All Schools</a>
									</li>
									<li>
										<a class="dropdown-item" asp-area="" asp-controller="School" asp-action="Add">Add School</a>
									</li>
									<!-- Add additional dropdown items for managing schools -->
								</ul>
							</div>
						</li>
						
						<!-- Spacer between the two dropdowns -->
						<li class="nav-item" style="margin-left: 10px;"></li>
						
						<!-- Second Dropdown for managing teachers -->
						<li class="nav-item">
							<div class="dropdown">
								<button class="btn btn-secondary dropdown-toggle" type="button" id="manageTeachersDropdown" data-bs-toggle="dropdown" aria-expanded="false">
									Manage Teachers
								</button>
									<ul class="dropdown-menu" aria-labelledby="manageTeachersDropdown">
									<li>
										<a class="dropdown-item" asp-area="" asp-controller="Teacher" asp-action="All">All Teachers</a>
									</li>
									<li>
										<a class="dropdown-item" asp-area="" asp-controller="Teacher" asp-action="All">Add Teacher</a>
									</li>
									<!-- Add additional dropdown items for managing students -->
								</ul>
							</div>
						</li>

					</ul>
					<partial name="_LoginPartial"/>
				</div>
			</div>
		</nav>
	</header>
}
else
{
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">KyberKlass</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
				        aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>
					</ul>
					<partial name="_LoginPartial"/>
				</div>
			</div>
		</nav>
	</header>
}
<div class="container">
	<main role="main" class="pb-3">
		@RenderBody()
	</main>
</div>

<footer class="border-top footer text-muted">
	<div class="container">
		&copy; KyberKlass @RELEASE_YEAR
		@if (DateTime.UtcNow.Year != RELEASE_YEAR)
		{
			@Html.Raw($" - {DateTime.UtcNow.Year}")
		}
		<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
	</div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>