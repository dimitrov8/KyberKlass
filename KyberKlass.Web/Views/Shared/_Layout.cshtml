@using static KyberKlass.Common.GeneralApplicationConstants

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<title>@ViewData["Title"] - KyberKlass</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
	<link rel="stylesheet" href="~/css/table.css" />
	<link rel="stylesheet" href="~/KyberKlass.Web.styles.css" asp-append-version="true"/>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
@if (User.IsInRole("Admin"))
{
	<header>
		<!-- Admin Navigation Bar -->
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">KyberKlass (Admin)</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
				        aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<!-- First Dropdown for managing schools -->
						<li class="nav-item">
							<div class="dropdown">
								<button class="btn btn-secondary dropdown-toggle" type="button" id="manageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
									Manage Schools
								</button>
								<ul class="dropdown-menu" aria-labelledby="manageDropdown">
									<li>
										<a class="dropdown-item" asp-area="" asp-controller="School" asp-action="All">All Schools</a>
									</li>
									<li>
										<a class="dropdown-item" asp-area="" asp-controller="School" asp-action="Add">Add School</a>
									</li>
									<!-- Add additional dropdown items for managing schools -->
								</ul>
							</div>
						</li>

						<!-- Navigation button for managing users -->
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="User" asp-action="All">Manage Users</a>
						</li>

						<!-- Navigation button for managing teachers -->
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Teacher" asp-action="All">Manage Teachers</a>
						</li>

						<!-- Navigation button for managing students -->
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Student" asp-action="All">Manage Students</a>
						</li>

					</ul>
					<partial name="_LoginPartial"/>
				</div>
			</div>
		</nav>
	</header>
}
else
{
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">KyberKlass</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
				        aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
					</ul>
					<partial name="_LoginPartial"/>
				</div>
			</div>
		</nav>
	</header>
}
<div class="container">
	<main role="main" class="pb-3">
		@RenderBody()
	</main>
</div>

<footer class="border-top footer text-muted">
	<div class="container">
		&copy; KyberKlass @RELEASE_YEAR
		@if (DateTime.UtcNow.Year != RELEASE_YEAR)
		{
			@Html.Raw($" - {DateTime.UtcNow.Year}")
		}
	</div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>