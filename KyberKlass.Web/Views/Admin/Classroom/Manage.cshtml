@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ManageClassroomsViewModel

<h2>Manage Classrooms for @Model.SchoolName</h2>

@if (TempData["SuccessMessage"] != null)
{
		<div class="alert alert-success" role="alert">
		@TempData["SuccessMessage"]
		</div>
}

@if (TempData["ErrorMessage"] != null)
{
	<div class="alert alert-danger" role="alert">
		@TempData["ErrorMessage"]
	</div>
}

@if (Model.Classrooms.Any())
{
	<table class="table">
		<thead>
		<tr>
			<th>Classroom Name</th>
			<th>Teacher</th>
			<th>Number of Students</th>
			<th style="width: 350px;">Actions</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var classroom in Model.Classrooms)
		{
			<tr>
				<td>@classroom.Name</td>
				<td>@classroom.TeacherName</td>
				<td>@classroom.StudentsCount</td>
				<td>
					<a asp-controller="Classroom" asp-action="Details" asp-route-id="@classroom.Id" class="btn btn-info">View Details</a>
					<a asp-controller="Classroom" asp-action="Edit" asp-route-id="@classroom.Id" class="btn btn-warning">Edit</a>
					<a asp-controller="Classroom" asp-action="Delete" asp-route-id="@classroom.Id" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
		</tbody>
	</table>
}
else
{
	<p>No classrooms found.</p>
}

<a asp-controller="Classroom" asp-action="Add" asp-route-schoolId="@Model.SchoolId" class="btn btn-success">Add Classroom</a>