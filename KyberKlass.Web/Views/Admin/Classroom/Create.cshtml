@model ClassroomCreateViewModel

<h2>Create Classroom</h2>

<form asp-controller="Classroom" asp-action="Create" method="post">
	<div class="form-group">
		<label asp-for="Name">Classroom Name:</label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="TeacherId">Teacher:</label>
		<select asp-for="TeacherId" class="form-control">
			<option value="">Select Teacher</option>
			@foreach (var teacher in Model.UnassignedTeachers)
			{
				<option value="@teacher.Id">@teacher.Name</option>
			}
		</select>
		<span asp-validation-for="TeacherId" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label>Students:</label>
		<select asp-for="SelectedStudents" multiple class="form-control">
			@foreach (var student in Model.Students)
			{
				<option value="@student.Id">@student.Name</option>
			}
		</select>
		<span asp-validation-for="SelectedStudents" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="IsActive">Active:</label>
		<input asp-for="IsActive" type="checkbox" />
	</div>

	<input type="hidden" asp-for="SchoolId" />

	<button type="submit" class="btn btn-primary">Create</button>
</form>