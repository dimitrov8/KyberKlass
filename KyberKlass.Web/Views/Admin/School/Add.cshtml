@model AddSchoolFormModel

@{
	ViewBag.Title = "Add School";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr/>

@if (TempData["ErrorMessage"] != null)
{
	<div class="alert alert-danger" role="alert">
		@TempData["ErrorMessage"]
	</div>
}

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form asp-action="Add" method="post">
			<div class="mb-3">
				<label asp-for="@Model.Name" class="form-label">Name</label>
				<input asp-for="@Model.Name" class="form-control" aria-required="true"/>
				<span asp-validation-for="@Model.Name" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.Address" class="form-label">Address</label>
				<input asp-for="@Model.Address" class="form-control" aria-required="true"/>
				<span asp-validation-for="@Model.Address" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.Email" class="form-label">Email</label>
				<input asp-for="@Model.Email" class="form-control" aria-required="true">
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.PhoneNumber" class="form-label">Phone Number</label>
				<input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true"/>
				<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<input class="btn btn-primary" type="submit" value="Add"/>
			</div>
		</form>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial"/>
}