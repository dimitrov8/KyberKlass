@model IEnumerable<SchoolDetailsViewModel>

<table id="schoolsTable" class="table table-bordered table-active table-hover custom-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var school in Model)
        {
            <tr>
                <td>@school.Name</td>
                <td>@school.Address</td>
                <td>@school.Email</td>
                <td>@school.PhoneNumber</td>
                <td>

                    <!-- Edit button -->
                    <div class="action-container" style="max-width: 350px; flex-wrap: nowrap">
                        <div class="d-flex flex-column">
                            <form asp-controller="School" asp-action="Edit" method="get" style="display : inline;">
                                <input type="hidden" name="id" value="@school.Id" />
                                <button type="submit" class="btn btn-secondary btn-sm fw-bold action-btn">Edit</button>
                            </form>

                            <!-- Details button -->
                            <form asp-controller="School" asp-action="Details" method="get" style="display : inline;">
                                <input type="hidden" name="id" value="@school.Id" />
                                <button type="submit" class="btn btn-info btn-sm fw-bold action-btn">Details</button>
                            </form>
                        </div>


                        <div class="d-flex flex-column align-items-end">
                            <!-- Manage Classrooms button -->
                            <form asp-controller="Classroom" asp-action="Manage" method="get" style="display : inline;">
                                <input type="hidden" name="schoolId" value="@school.Id" />
                                <button type="submit" class="btn btn-primary btn-sm fw-bold action-btn">Manage</button>
                            </form>

                            <!-- Delete button -->
                            <form asp-controller="School" asp-action="Delete" method="get" style="display : inline;">
                                <input type="hidden" name="id" value="@school.Id" />
                                <button type="submit" class="btn btn-danger btn-sm fw-bold action-btn">Delete</button>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>