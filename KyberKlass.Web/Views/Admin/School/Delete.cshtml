@model SchoolViewModel

@{
	ViewData["Title"] = "Delete School";
}

<div class="container">
	<h1>@ViewData["Title"]</h1>
	<hr />

	<div class="row">
		<div class="col-md-8">
			<h3>Are you sure you want to delete this?</h3>
			<dl class="row">
				<dt class="col-sm-4">Name:</dt>
				<dd class="col-sm-8">@Model.Name</dd>

				<dt class="col-sm-4">Address:</dt>
				<dd class="col-sm-8">@Model.Address</dd>

				<dt class="col-sm-4">Email:</dt>
				<dd class="col-sm-8">@Model.Email</dd>

				<dt class="col-sm-4">Phone Number:</dt>
				<dd class="col-sm-8">@Model.PhoneNumber</dd>

				<dt class="col-sm-4">Is Active:</dt>
				<dd class="col-sm-8">@Model.IsActive</dd>
			</dl>

			<form asp-controller="School" asp-action="DeleteConfirmed" method="post">
				<input type="hidden" asp-for="Id" />
				<button type="submit" class="btn btn-danger">Delete</button>
				<a href="@Url.Action("All", "School")" class="btn btn-secondary ml-2">Back to List</a>
			</form>
		</div>
	</div>
</div>