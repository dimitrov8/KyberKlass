@model SchoolViewModel

@{
	ViewBag.Title = "Delete School";
}

<h1>@ViewBag.Title</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
	<hr/>
	<dl class="row">
		<dt class="col-sm-2">Name:</dt>
		<dd class="col-sm-10">@Model.Name</dd>

		<dt class="col-sm-2">Address:</dt>
		<dd class="col-sm-10">@Model.Address</dd>
		
		<dt class="col-sm-2">Email:</dt>
		<dd class="col-sm-10">@Model.Email</dd>
		
		<dt class="col-sm-2">Phone Number:</dt>
		<dd class="col-sm-10">@Model.PhoneNumber</dd>
		
		<dt class="col-sm-2">Is Deleted:</dt>
		<dd class="col-sm-10">@Model.IsDeleted</dd>
	</dl>

	<form asp-controller="School" asp-action="DeleteConfirmed" method="post">
		<input type="hidden" asp-for="Id"/>
		<button type="submit" class="btn btn-danger">Delete</button> |
		<a asp-controller="School" asp-action="All">Back to List</a>
	</form>
</div>