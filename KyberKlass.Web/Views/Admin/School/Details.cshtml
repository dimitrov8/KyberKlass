@model SchoolViewModel

@{
    ViewBag.Title = "School Details";
}

<div class="container">
    <h1 class="mt-5">@ViewBag.Title</h1>

    <dl class="row mt-5">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Is Deleted</dt>
        <dd class="col-sm-10">@Model.IsDeleted</dd>
    </dl>

    <div class="mt-5">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-secondary" asp-action="All">Back to List</a>
    </div>
</div>
